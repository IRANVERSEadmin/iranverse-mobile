{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native"
  },
  "include": [
    "src/**/*",
    "App.tsx"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "extends": "expo/tsconfig.base"
}